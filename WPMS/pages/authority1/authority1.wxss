/* pages/authority1/authority1.wxss */
.authpage{
  width: 100%;
  height: 900rpx;
  display: flex;
  justify-content: center;
  
  align-items: center;
}
.mainbox{
  width: 500rpx;
  height: 400rpx;
  background-color: #f4f6f8;
  border-radius: 50rpx;
  
}
.registerbox{
  margin-top: 60rpx;
}

.titlebox{
  display: flex;
  flex-direction: row;
  
}
.nameTitle{
  display: flex;
  flex-direction: row;
  width: 20%;
  margin-bottom: 25rpx;
  margin-left: 15%;
  justify-content: space-between;
  font-size: 32rpx;
  color: #A9A9A9;
}
.registerName{
  width: 50%;
  border: 4rpx solid  	#87CEFA;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  text-align: center;
}
.authbtn{

  margin-top: 30rpx;
  display: flex;
  justify-content: center;

}
.btn{
  text-align: center;
  width: 200rpx;
  height: 70rpx;
  background-color: #00BFFF;
  line-height: 70rpx;
  border-radius: 70rpx;
}
.top-selected{
  display:flex;
  flex-direction: row;
  justify-content: center;  /*水平*/
  /* align-items: center; 垂直 */ 
  /* border:3rpx solid black;
  border-radius: 20rpx;
  height: 60rpx;
  /* width: 300rpx; */
  margin-left: auto;
  /* color: #808080; */
}
.top-selected image{
  width: 50rpx;
  height: 50rpx;

}
.select_box {
  display:flex;
  flex-direction: column;
  justify-content: center;  /*水平*/
  background-color: #e3f0f8;
  padding: 0 20rpx;
  width: 200rpx;
  float: right;
  position: absolute;

  z-index: 1;
  overflow: hidden;
  text-align: left;
  animation: myfirst 0.5s;
  font-size: 30rpx;
  /* margin-left: 80rpx;
  margin-top: 80rpx; */
}
.select_one {
  padding-left: 20rpx;

  height: 60rpx;
  position: relative;
  line-height: 60rpx;
  border-bottom: 1px solid #ccc;
}
.infobox{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.infoimage{
  width: 230rpx;
  height: 230rpx;
  border-radius: 230rpx;
  border: 6rpx solid #e3f0f8;
  margin-top: 5%;
}
.hello{
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}